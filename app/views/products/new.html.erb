<h1>List Item For Sale</h1>

<%= form_for(@product) do |f| %>
  <%= render 'shared/product_error_messages' %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class ="field">
    <%= f.label :title %><br/>
    <%= f.text_area :title %><br/>
  <div>

  <div class ="field">
    <%= f.label :price %><br/>
    <%= f.text_area :price %><br/>
  <div>

  <div class ="field">
    <%= f.label :picture_url %><br/>
    <%= f.text_area :picture_url %><br/>
  <div>

  <div class="actions">
    <%= f.submit "List Product" %>
  </div>
<% end %>
