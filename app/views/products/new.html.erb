<script src="app/assets/javascripts/application.js"></script>
<script src="app/assets/javascripts/people.js.coffee"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<h1> New Item </h1>

<%= form_for(@product) do |f| %>
  <%= render 'shared/product_error_messages' %> 
  <%= f.hidden_field :user_id, :value => current_user.id %>

 
  <div class ="field">
    <%= f.label :title %><br/>
    <%= f.text_area :title, {class: "form-control"} %><br/>
  <div>

  <div class ="field">
    <%= f.label :price %><br/>
    <%= f.text_area :price, {class: "form-control"} %><br/>
  <div>

  <div class ="field">
    <%= f.label :designer %><br/>
    <%= f.collection_select :designer, Designer.order(:designer), :id, :designer, {include_blank: true}, {class: "form-control"} %>
  <div>

  <div class ="field">
    <%= f.label :category %><br/>
    <%= f.collection_select :category, Category.order(:category), :id, :category, {include_blank: true}, {class: "form-control"}  %>
  <div>

  <div class ="field">
    <%= f.label :subcategory %><br/>
    <%= f.grouped_collection_select :subcategory, Category.order(:category), :subcategories, :category, :id, :subcategory, {include_blank: true}, {class: "form-control"} %>
  <div>

  <div class ="field">
    <%= f.label :size %><br/>
    <%= f.select :size, ['S', 'M', 'L', 'XL', 'XXL', '7', '7.5', '8', '8.5', '9', '9.5', 
                         '10', '10.5', '11', '11.5', '12', '12.5', '13','N/A'], {:prompt => 'Select Size'}, {class: "form-control"}  %>
  <div>

  <div class ="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, {class: "form-control", rows: "3", placeholder: "Retail Price, Condition, Measurements, Shipping Policy, Link to Retail, etc."} %><br/>
  <div>

  <%#https://bootsnipp.com/snippets/qr6rB%>
  <div class="container">
    <div class="row">
      <div class="col-sm">
          <% if @product.product_image_1.attached?  %>
            <%= image_tag url_for(@product.product_image_1), class: 'hidden image_to_upload_1' %>
          <% else %>
            <%= image_tag "https://scontent.fapa1-1.fna.fbcdn.net/v/t1.0-9/52333373_10214063985574057_6465033688768839680_n.jpg?_nc_cat=108&_nc_ht=scontent.fapa1-1.fna&oh=b14fcf9a373a31a5b482c44e5b4ec7da&oe=5CE4F9F4", class: 'hidden image_to_upload_1'%>
          <% end %>
          <br/><br/>
          <%= f.label :product_image_1, 'Picture #1'%>
          <%= f.file_field :product_image_1, class: 'photo_upload_1' %>
      </div>
      <div class="col-sm">
        <% if @product.product_image_2.attached? %> 
          <%= image_tag url_for(@product.product_image_2), class: 'hidden image_to_upload_2' %>
        <% else %>
          <%= image_tag "https://scontent.fapa1-1.fna.fbcdn.net/v/t1.0-9/52333373_10214063985574057_6465033688768839680_n.jpg?_nc_cat=108&_nc_ht=scontent.fapa1-1.fna&oh=b14fcf9a373a31a5b482c44e5b4ec7da&oe=5CE4F9F4", class: 'hidden image_to_upload_2'%>
        <% end %>
        <br/><br/>
        <%= f.label :product_image_2, 'Picture #2'%>
        <%= f.file_field :product_image_2, class: 'photo_upload_2' %>
      </div>
      <div class="col-sm">
         <% if @product.product_image_3.attached?  %>
            <%= image_tag url_for(@product.product_image_3), class: 'hidden image_to_upload_3' %>
          <% else %>
            <%= image_tag "https://scontent.fapa1-1.fna.fbcdn.net/v/t1.0-9/52333373_10214063985574057_6465033688768839680_n.jpg?_nc_cat=108&_nc_ht=scontent.fapa1-1.fna&oh=b14fcf9a373a31a5b482c44e5b4ec7da&oe=5CE4F9F4", class: 'hidden image_to_upload_3'%>
          <% end %>
        <br/><br/>
        <%= f.label :product_image_3, 'Picture #3'%>
        <%= f.file_field :product_image_3, class: 'photo_upload_3' %>
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "List Product", class: "btn btn-primary btn-lg btn-block"  %>
  </div>
<% end %>
