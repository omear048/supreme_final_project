<li>
  <span class="content"><%= products.title %></span> 
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago. 
  </span>
  <% if current_user?(products.user) %>
    <%= link_to "delete", products, method: :delete,
                                     data: { confirm: "You sure?" }, 
                                     title: products.title %>
<% end %>
</li>